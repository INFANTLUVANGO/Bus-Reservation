package busresevation;
import java.util.*;
public class Bus {
    private int bus_no;
    private boolean ac;
    private int capacity;
    Bus(int busno, boolean ac, int capacity) {
        this.bus_num = busno;
        this.ac = ac;
        this.capacity = capacity;
    }
    public int getBus_no() {
        return bus_num;
    }
    public int getCapacity() {
        return capacity;
    }
   public void displayBusinfo()
    {
        System.out.println("bus no: " + bus_num+", ac: " + ac+", capacity: " + capacity);
    }
}

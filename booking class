package busresevation;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.*;
import java.text.DateFormat;

public class Booking {
    int busnum;
    String passenger_name;
    Date date;

    Booking()
    {
        Scanner sc = new Scanner(System.in);
        System.out.println("ENTER YOUR NAME: ");
        passenger_name=sc.nextLine();
        System.out.println("ENTER YOUR BUS NUMBER: ");
        busnum=sc.nextInt();
        System.out.println("ENTER YOUR DATE: ");
        String dateinput=sc.next();
        DateFormat dateFormat = new SimpleDateFormat("dd/MM/yyyy");
        try {
            date=dateFormat.parse(dateinput);
        } catch (ParseException e) {
            throw new RuntimeException(e);
        }

    }
    public boolean isavalable(ArrayList<Booking> bookings,ArrayList<Bus> buses)
    {
        int capacity=0;
        for (Bus bus : buses)
        {
            if (bus.getBus_no()==busnum)
            {
                capacity=bus.getCapacity();
            }
        }
        int count=0;
        for (Booking booking : bookings)
        {
            if (booking.busnum==busnum && booking.date.equals(date)){
                count++;
            }
        }
        return count < capacity;
    }
}
